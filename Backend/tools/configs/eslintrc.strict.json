{
  "root": true,               
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "complexity": ["error", 5],
    "max-depth": ["error", 4],
    "max-lines-per-function": ["warn", 50],
    "no-magic-numbers": ["warn", { "ignore": [0, 1] }],
    "no-unused-vars": "warn",
    "no-duplicate-imports": "error",
    "no-nested-ternary": "error",
    "no-console": "warn"
  }
}
